<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?selectableItemBackground"
                android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        style="@style/Card"
        android:layout_centerInParent="true"
        android:layout_margin="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            tools:ignore="UnusedAttribute">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/bck"
                tools:ignore="ContentDescription"/>

            <LinearLayout
                android:id="@+id/cardFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.colin.gold.AboutProfileImageView
                    android:id="@+id/image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@mipmap/avatar"
                    app:riv_border_color="#fff"
                    app:riv_border_width="2.5dp"
                    app:riv_oval="true"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="12dp"
                    android:text="Colin He"
                    android:textColor="#333"
                    android:textSize="22dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Android Developer in JJdance Inc.Material Design fans. Lives in Beijing Chaoyang."
                    android:textColor="#333"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="UI/UX . JAVA . Google VR\n Born 1994.03.29"
                    android:textColor="#333"
                    android:textSize="16dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/github"
                        style="?borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/github"
                        android:drawablePadding="6dp"
                        android:tag="https://dribbble.com/tomwellington"
                        android:text="Github"
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp"/>

                    <Button
                        android:id="@+id/ins"
                        style="?borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@mipmap/instagram"
                        android:drawablePadding="6dp"
                        android:tag="https://dribbble.com/tomwellington"
                        android:text="Instagram"
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp"/>

                    <Button
                        android:id="@+id/gplus"
                        style="?borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@mipmap/gplus"
                        android:drawablePadding="6dp"
                        android:tag="https://dribbble.com/tomwellington"
                        android:text="Google+"
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp"/>

                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>